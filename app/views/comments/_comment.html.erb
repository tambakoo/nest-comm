<li>
  <%= comment.body %> -
  <small><%= time_ago_in_words(comment.created_at) %> ago, by <%= comment.user.email %></small>
  <small><%= link_to "remove comment", comment ,method: :delete  if correct_user?(comment.user) && comment.comments.blank? %></small>

  <%= form_for [comment, Comment.new] do |f| %>
      <%= f.text_area :body, placeholder: "Add a Reply" %><br/>
      <%= f.submit "Reply"  %>
      <% end %>

  <ul>
      <%= render partial: 'comments/comment', collection: comment.comments %>
  </ul>

</li>